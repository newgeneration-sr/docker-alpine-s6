#!/bin/sh

NAME=$1
EXEC=$2
WAIT=$3

while [ ! -f "/tmp/container.init.start" ];
do 
        sleep 0.2
done

if [ -n $WAIT ] && [ "x$WAIT" != "x" ];
then
    while [ ! -f $WAIT ];
    do
        sleep 1
    done 
fi

echo "[ Starting   ] - $NAME"

if [ -f "/tmp/container.init.end" ];
then
    RETRY=0
    while [ 1 -eq 1 ];
    do
        if [ $RETRY -lt 10 ];
        then
            RETRY=$(($RETRY + 1))
            eval $EXEC
            sleep 2
            echo "[ Restarting ] - $NAME"
        else
            break;
        fi
    done
    echo "[ Fail       ] - $NAME"
    pkill -u root
else
    eval $EXEC
    echo "[ Restarting ] - $NAME"
fi

